{
  "name": "peppermint",
  "version": "1.0.0",
  "description": "Application for streamlining test generation",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "webpack --config webpack.common.js --watch",
    "start": "electron .",
    "forge-start": "electron-forge start",
    "forge-package": "electron-forge package",
    "forge-make": "electron-forge make",
    "forge-publish": "electron-forge publish"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/PepperMint.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_quick_start"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "keywords": [],
  "author": "Team EXTERMINATORS",
  "license": "ISC",
  "dependencies": {
    "codemirror": "^5.65.15",
    "dotenv": "^16.3.1",
    "mongodb": "^6.1.0",
    "mongoose": "^7.6.1",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-codemirror2": "^7.3.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron": "^27.0.2",
    "electron-reload": "^2.0.0-alpha.1",
    "sass": "^1.69.3",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
